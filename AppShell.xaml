<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="todomaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:todomaui"
    xmlns:views="clr-namespace:todomaui.Views"
    Shell.FlyoutBehavior="Flyout"
    >

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="todolist" Route="todolist" ContentTemplate="{DataTemplate views:TodoListPage}"></ShellContent>
        <ShellContent Title="news" Route="news" ContentTemplate="{DataTemplate views:NewsListPage}"></ShellContent>
        <ShellContent Title="config" Route="config" ContentTemplate="{DataTemplate views:ConfigPage}"></ShellContent>
    </FlyoutItem>
    <ShellContent Title="login" Route="login" ContentTemplate="{DataTemplate views:LoginPage}"></ShellContent>

</Shell>
